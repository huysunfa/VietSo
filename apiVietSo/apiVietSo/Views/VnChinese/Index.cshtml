@model IEnumerable<apiVietSo.Models.VnChinese>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<form>
<h2>Quản lý thư viện mặt chữ 
    <input autofocus  placeholder="Nhập chữ việt để xem mặt chữ" style="width:50%" name="vn" value="@ViewBag.vn"/> 
    </h2>

</form>

<p>
<a class="btn btn-sm btn-primary" href="/VnChinese/Create">Thêm mặt chữ</a></p>
<table class="table table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.vn)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.chinese)
        </th>
        
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.vn)
        </td>
        <td style="font-size:20px;font-weight:bold">
            @Html.DisplayFor(modelItem => item.chinese)
        </td>
    
 
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
             @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
