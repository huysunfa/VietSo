                </div>

            </div>*@

        </div>

        <div class="col-md-9" id="bodyDanhSachChiTiet">


        </div>

    </div>

</section>

<script>
    $(".btnxemchitiet").click(function (e) {
        e.preventDefault();
        var key = $(this).attr("data-name");
        $(".btnxemchitiet").removeClass("activeLeftMenu");
        $(this).addClass("activeLeftMenu");
        key = encodeURIComponent(key);
        $("#bodyDanhSachChiTiet").load("/DanhSachChoDuyet/danhsachchitiet?key=" + key);
    });
</script>