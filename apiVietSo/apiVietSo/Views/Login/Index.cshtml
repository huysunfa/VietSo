<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>AdminLTE 3 | Log in (v2)</title>

    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <link href="~/Content/lib/LTE/adminlte.min.css" rel="stylesheet" />
    <link href="~/Content/lib/font-awesome/css/all.min.css" rel="stylesheet" />

</head>
<body class="hold-transition login-page">
    <div class="login-box">
        <!-- /.login-logo -->
        <div class="card card-outline card-primary">
            <div class="card-header text-center">
                <a href="/Login/Index" class="h1"><img src="~/Content/img/LOGO.png"> <b>@SettingData.NameWebsite</b></a>
            </div>
            <div class="card-body">
                <p class="login-box-msg">Đăng nhập để bắt đầu làm việc</p>

                <form action="/Login/Index" method="post">
                    <label>Tài khoản</label>
                    <div class="input-group mb-3">
                        <input type="text" name="TAIKHOAN" class="form-control" placeholder="StaffID" autofocus>
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-envelope"></span>
                            </div>
                        </div>
                    </div>
                    <label>Mật khẩu</label>
                    <div class="input-group mb-3">
                        <input type="password" name="MATKHAU" class="form-control" placeholder="Password">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-lock"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <label class="text-danger">@ViewBag.Error</label>
                            <button type="submit" class="btn btn-primary btn-block">Đăng nhập</button>
                        </div>
                        <!-- /.col -->
                    </div>
                </form>

               

                <p class="mb-1">
                    <a href="/">
                        Tôi quên mật khẩu của tôi                    </a>
                </p>
                 
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>

</body>
</html>
